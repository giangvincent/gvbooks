{% set links = links|default([]) %}
<header class="sana-nav">
  <div class="sana-nav__inner">
    <a class="sana-nav__brand" href="{{ path('<front>') }}">
      <span class="inline-flex h-12 w-12 items-center justify-center rounded-full bg-gradient-to-r from-sana-accent to-sana-accentSoft text-sana-night font-semibold">GV</span>
      <span>{{ site_name|default('GVQuest Studio') }}</span>
    </a>
    <div class="flex items-center gap-3 lg:hidden">
      {% if app.user %}
        <a href="{{ path('user.logout') }}" class="sana-nav__link">{{ 'Logout'|t }}</a>
      {% else %}
        <a href="{{ path('user.login') }}" class="sana-nav__link">{{ 'Login'|t }}</a>
      {% endif %}
      <button type="button" class="js-gvquest-nav-toggle inline-flex items-center justify-center rounded-full bg-sana-pill p-2 text-sana-text" aria-controls="gvquest-main-nav-mobile" aria-expanded="false">
        <span class="sr-only">{{ 'Toggle navigation'|t }}</span>
        <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
    <nav id="gvquest-main-nav" class="sana-nav__links">
      {{dump(links)}}
      {% for item in links %}
        <a href="{{ item.url }}" class="sana-nav__link {{ item.active ? 'sana-nav__link--active' }}">{{ item.title }}</a>
      {% endfor %}
      {{dump(app.user)}}
      {% if app.user %}
        <a href="{{ path('user.logout') }}" class="sana-nav__link lg:inline-flex hidden">{{ 'Logout'|t }}</a>
      {% else %}
        <a href="{{ path('user.login') }}" class="sana-nav__link lg:inline-flex hidden">{{ 'Login'|t }}</a>
      {% endif %}
    </nav>
  </div>
  <nav class="lg:hidden">
    <div id="gvquest-main-nav-mobile" class="hidden px-6 pb-4" data-responsive>
      <div class="flex flex-col gap-2">
        {% for item in links %}
          <a href="{{ item.url }}" class="sana-nav__link {{ item.active ? 'sana-nav__link--active' }}">{{ item.title }}</a>
        {% endfor %}
      </div>
    </div>
  </nav>
</header>
