{#
  Custom card layout for the "my_books" view.
  Wraps each row in a responsive card using Tailwind utility classes.
#}

{% if rows|length %}
  <div class="grid gap-8 md:grid-cols-2 xl:grid-cols-3">
    {% for row in rows %}
      <article{{ row.attributes.addClass('sana-card flex flex-col gap-4') }}>
        {{ row.content }}
      </article>
    {% endfor %}
  </div>
{% else %}
  <div class="rounded-3xl border border-dashed border-white/10 bg-sana-card/40 p-12 text-center">
    <h3 class="text-lg font-semibold text-sana-text mb-2">{{ 'No books yet'|t }}</h3>
    <p class="mb-4 text-sana-muted">{{ 'Upload your first book to start building your GVQuest library.'|t }}</p>
    <a class="sana-button" href="{{ path('node.add', {'node_type': 'book'}) }}">
      <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
        <path fill-rule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z" clip-rule="evenodd" />
      </svg>
      {{ 'Upload Book'|t }}
    </a>
  </div>
{% endif %}
